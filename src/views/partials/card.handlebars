{{#each card}}
<div class="card-modal" hidden>
    <button class="close-button" id="closeModal">Close Modal</button>
    <form id="updateCard" action="/board/card/{{boardId}}/{{_id}}" method="POST">
        <h1>{{name}}</h1>
        <h2>Members</h2>
        {{#each members}}
        {{#if assigned}}
        <input type="checkbox" class="assigned" value="{{initials}}">
        {{else}}
        <input type="checkbox" class="unassigned" value="{{initials}}">
        {{/if}}
        {{/each}}
        <h2>Labels</h2>
        {{#each labels}}
        <h3 style="background-color: {{color}}">{{text}}</h3>
        {{/each}}
        <h2>Description</h2>
        <textarea id="description" name="description">{{description}}</textarea>
        <h2>Move Card</h2>
        <label>
            To List
            <select id="toList">
                {{#each list}}
                <option value="{{_id}}">{{listName}}</option>
                {{/each}}
            </select>
        </label>
        <label>
            Position
            <select id="position">
                {{#each position}}
                <option value="{{position}}">{{position}}</option>
                {{/each}}
            </select>
        </label>
        <label>
            Due Date
            <input type="date" id="dueDate" value="{{dueDate.date}}">
            <input type="time" id="dueTime" value="{{dueDate.time}}">
        </label>
        <button type="submit">Save Card</button>
        <button id="deleteCard">Delete Card</button>
    </form>
    
    <div class="comment">
        <h2>Comments</h2>
        {{#each comments}}
        <h3>{{user.initials}}</h3>
        <p class="comment">{{comment}}</p>
        {{/each}}
    </div>
</div>