<h2>Comments</h2>
{{#each comments}}
    <div class="comment-container">
        <h3>{{user.initials}}</h3>
        <p class="comment">{{comment}}</p>
    </div>
{{/each}}
<form id="comment-form" action="/board/card/comments/{{boardId}}/{{cardId}}" method="POST">
    <input type="hidden" name="_method" value="PUT" />
     <label>
        Comment
        <input type="text" name="comment" class="comment-box" id="commentInput" required/>
    </label>
    <button type="submit">Send</button>
</form>