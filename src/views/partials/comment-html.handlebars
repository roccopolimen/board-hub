<h2>Comments</h2>
{{#each comments}}
<h3>{{user.initials}}</h3>
<p class="comment">{{comment}}</p>
{{/each}}
<form id="comment-form" action="/boards/card/comments/{{boardId}}/{{cardId}}" method="POST">
    <input type="hidden" name="_method" value="put" />
     <label>
        Comment
        <input type="text" name="comment" class="comment-box" id="commentInput"/>
    </label>
    <button type="submit">Send</button>
</form>